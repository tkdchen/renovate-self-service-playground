{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],

  "tekton": {
    "fileMatch": ["./*.yaml"],
    "postUpgradeTasks": {
      "commands": [
        "echo '{{{ upgrades }}}'"
      ],
      "executionMode": "branch"
    }
  },

  "packageRules": [
    {
      "matchPackageNames": ["registry.fedoraproject.org/fedora-minimal"],
      "enabled": false
    },
    {
      "matchDatasources": ["pypi"],
      "groupName": "python-deps"
    },
    {
      "groupName": "redhat-images",
      "matchPackageNames": [
        "registry.access.redhat.com/ubi9/python-312"
      ]
    }
  ]
}
