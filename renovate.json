{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],

  "tekton": {
    "fileMatch": ["./*.yaml"],
    "postUpgradeTasks": {
      "commands": [
        "git status",
        "echo {{updatedDeps.length}}",
        "echo '[{{#each upgrades}}{\"depName\": \"{{{depName}}}\", \"currentValue\": \"{{{currentValue}}}\", \"currentDigest\": \"{{{currentDigest}}}\", \"newValue\": \"{{{newValue}}}\", \"newDigest\": \"{{{newDigest}}}\", \"packageFile\": \"{{{packageFile}}}\", \"parentDir\": \"{{{parentDir}}}\", \"depTypes\": [{{#each depTypes}}\"{{{this}}}\"{{#unless @last}},{{\/unless}}{{\/each}}]}{{#unless @last}},{{\/unless}}{{\/each}}]' | wc"
      ],
      "executionMode": "update"
    }
  },

  "packageRules": [
    {
      "matchPackageNames": ["registry.fedoraproject.org/fedora-minimal"],
      "enabled": false
    },
    {
      "matchDatasources": ["pypi"],
      "groupName": "python-deps"
    },
    {
      "groupName": "redhat-images",
      "matchPackageNames": [
        "registry.access.redhat.com/ubi9/python-312"
      ]
    }
  ]
}
